# Server port (default: 4200)
PORT=4200

# Default Claude model: sonnet | opus | haiku
DEFAULT_MODEL=sonnet

# Max concurrent tasks (default: 3)
MAX_CONCURRENT_TASKS=3

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Agent timeouts (ms)
# AGENT_TIMEOUT_SIMPLE_MS=120000
# AGENT_TIMEOUT_MEDIUM_MS=300000
# AGENT_TIMEOUT_COMPLEX_MS=600000

# Max fix iterations before giving up
# MAX_FIX_ITERATIONS=3

# PostgreSQL Database (optional - enables task history persistence)
# DB_ENABLED=true
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=
# DB_NAME=agx
# DB_SSL=false
